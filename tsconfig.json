{
    "compilerOptions": {
        "types": ["jest", "node"],
        "target": "ES5",
        "sourceMap": true,
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "strictPropertyInitialization": false,
        "allowJs": true,
        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@config/*": ["config/*"],
            "@shared/*": ["shared/*"],
            "@auth/*": ["shared/infra/http/middlewares/*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "dist/**/*.js",
        "src/**/*.ts",
    ],
}
